#!/bin/sh

echo "🚀 執行 Pre-commit Hook - 代碼品質檢查"
echo ""

# ESLint 代碼風格檢查
echo "📋 1/2 執行 ESLint 代碼風格檢查..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint 檢查失敗！請修正代碼風格問題後再提交。"
  exit 1
fi
echo "✅ ESLint 檢查通過"
echo ""

# 快速測試（只執行測試，遇到失敗立即停止）
echo "🧪 2/2 執行快速測試..."
npm test -- --bail --maxWorkers=2 --silent
if [ $? -ne 0 ]; then
  echo "❌ 測試失敗！請確保所有測試都通過後再提交。"
  exit 1
fi
echo "✅ 快速測試通過"
echo ""

echo "🎉 Pre-commit Hook 檢查完成！代碼品質良好，可以提交。"
echo ""
